<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FinancialLitApp.Views.Pages.ChallengesPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Challenges Page"
			 BackgroundColor="#0D1738"
			 >
    <StackLayout>
        <Label Text="Challenges Page" 
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />
    </StackLayout>
	<StackLayout Grid.Row="0" Spacing="40,0,60">
		<Button x:Name="SavingsChallenge"
							Text="Savings"
							BackgroundColor="#103D81"
							TextColor="#FFEBD7"
							FontSize="18"
							FontAttributes="Bold"
							CornerRadius="10"
							HeightRequest="50"
							Margin="0,20,0,0"
							Clicked="OnSavingsChallengedClicked">
			
		</Button>
			
	</StackLayout>
</ContentPage>