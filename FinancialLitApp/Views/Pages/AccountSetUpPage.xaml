<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FinancialLitApp.Views.Pages.AccountSetUpPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Create Account"
			 BackgroundColor="#0D1738">


	<ScrollView>
		<Grid RowDefinitions="Auto,*,Auto" Padding="30,20">
			<StackLayout Grid.Row="0" Spacing="15" Margin="0,20,0,40">
				<Label Text="Account Creation Page"
				  VerticalOptions="CenterAndExpand"
				  HorizontalOptions="CenterAndExpand" />
				<Label Text="Welcome to Financial Savvy : A financial literacy dedicated platform"
					   FontSize="24"
					   FontAttributes="Bold"
					   HorizontalOptions="Center"
					   TextColor="AntiqueWhite"/>
				<Label Text ="Start your journey towards financial freedom"
					   FontSize="15"
					   HorizontalOptions="Center"
					   TextColor="AntiqueWhite"/>
					
			</StackLayout>
			<StackLayout Grid.Row="1" Spacing="15">
				<!---Enter first name input field design -->
				<Frame BorderColor="Grey"
					   HasShadow="False"
					   CornerRadius="10"
					
					   Padding="0">
					<Entry x:Name="FirstNameEntry"
						   Placeholder="First Name"
						   ReturnType="Next"
						   FontSize="16"
						   Margin="15,10"/>
				</Frame>
				<!-- Enter last name input field desin -->
				<Frame BorderColor="Grey"
                       HasShadow="False"
                       CornerRadius="10"
                       Padding="0">
					<Entry x:Name="LastNameEntry"
                           TextColor="AntiqueWhite"
                         
                           Placeholder="Last Name"
                           ReturnType="Next"
                           FontSize="16"
                           Margin="15,10"/>
				</Frame>
				<!---Id Number Input Design-->
				<Frame BorderColor="Grey"
					   HasShadow="False"
					   CornerRadius="10"
					   
					   Padding="0">
					<Entry x:Name="IdNumberEntry"
						   Placeholder="Id Number"
						  
						   ReturnType="Next"
						   Margin="15,10"/>
				</Frame>
					   
				<!-- Email Input Designn -->
				<Frame BorderColor="Grey"
                       HasShadow="False"
                       CornerRadius="10"
					  
                       Padding="0">
					<Entry x:Name="EmailEntry"
                           Placeholder="Email address"
                           Keyboard="Email"
                           ReturnType="Next"
                           FontSize="16"
                           Margin="15,10"/>
				</Frame>

				<!-- Password Input Designn -->
				<Frame BorderColor="Grey"
                       HasShadow="False"
                       CornerRadius="10"
                       Padding="0">
					<Entry x:Name="PasswordEntry"
                           Placeholder="Password (min, 6 characters)"
						   IsPassword="True"
                           ReturnType="Next"
                           FontSize="16"
                           Margin="15,10"/>
				</Frame>

				<!--Confirm Password Input Design -->
				<Frame BorderColor="Grey"
                       HasShadow="False"
                       CornerRadius="10"

                       Padding="0">
					<Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm password"
                           IsPassword="True"
                           ReturnType="Next"
                           FontSize="16"
                           Margin="15,10"/>
				</Frame>

				<Label x:Name ="ErrorLabel"
				   IsVisible="False"
				   TextColor="Red"
				   FontSize="14"
				   HorizontalOptions="Center"
				   Margin="0,10"/>

				<!--Create Acc Btn Design-->
				<Button x:Name="CreateAccountButton"
							Text="Create Account"
							BackgroundColor="#103D81"
							TextColor="#FFEBD7"
							FontSize="18"
							FontAttributes="Bold"
							CornerRadius="10"
                            
							HeightRequest="50"
							Margin="0,20,0,0"
							Clicked="OnCreateAccountClicked"/>

				<ActivityIndicator x:Name="LoadingIndicator"
								   IsVisible="False"
								   IsRunning="False"
								   Color="#103D81"
								   VerticalOptions="Center"
								   Margin="0.10"/>

			</StackLayout>

            <StackLayout Grid.Row="2" 
                         Orientation="Horizontal" 
                         HorizontalOptions="Center" 
                         Spacing="5" 
                         Margin="0,30,0,20">
                <Label Text="Already have an account?" 
                       FontSize="14" 
                       TextColor= "#FFEBD7"/>
                <Label Text="Sign In" 
                       FontSize="14" 
                       FontAttributes="Bold" 
                       TextColor="#2196F3">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignInTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </Grid>
	</ScrollView>
</ContentPage>