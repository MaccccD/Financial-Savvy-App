<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FinancialLitApp.Views.Pages.LessonDetailPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Lesson Detail Page"
             BackgroundColor="#0D1738">
   
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!--Page Header for the Lesson details-->
            <Label Text="Lesson Detail Page" 
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
            <Label Text="Financial Concepts Lessons"
                   FontSize="25"
                   FontAttributes="Bold"
                   TextColor="#FFEBD7"
                   HorizontalOptions="Center"
                   Margin="0,10,20,0"/>

            <Label Text="Improve your financial knowledge below:"
                   FontSize="16"
                   TextColor="#FFEBD7"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30"/>
            
            
            <!--Lessons Detail Containers-->
            <!--Savings Challenge Lesson -->
            <StackLayout Spacing="20">
                <Frame BackgroundColor="#103D81"
                        CornerRadius="20"
                        Padding="0"
                        HasShadow="True">
                    <Button x:Name="Savings Lesson"
                             Text="ðŸ’° Savings Challlenge"
                             BackgroundColor="Transparent"
                             TextColor="#FFEBD7"
                             FontSize="18"
                             FontAttributes="Bold"
                             HeightRequest="60"
                             Clicked="OnClickedSavingsLesson"/>
                </Frame>
                

            </StackLayout>
           
        </StackLayout>
    </ScrollView>
        
   
</ContentPage>